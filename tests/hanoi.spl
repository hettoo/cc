/*
 * Recursive towers of Hanoi implementation.
 */

([Int], ([Int], [Int])) hanoiR (Int discs) {
    [Int] a = createTower(discs);
    [Int] b = [];
    [Int] c = [];
    printTowers(a, b, c);
    return transport(discs, a, b, c);
}

([t], ([t], [t])) transport (Int n, [t] from, [t] via, [t] to) {
    ([t], ([t], [t])) t = ([], ([], []));
    ([t], [t]) u = ([], []);
    if (n > 1) {
        t = transport(n - 1, from, to, via);
        from = t.fst;
        u = t.snd;
        to = u.fst;
        via = u.snd;
    }
    to = from.hd : to;
    from = from.tl;
    printTowers(from, via, to);
    if (n > 1) {
        t = transport(n - 1, via, from, to);
        via = t.fst;
        u = t.snd;
        from = u.fst;
        to = u.snd;
    }
    return (from, (via, to));
}

// Print the towers (in a list).
Void printTowers ([t] a, [t] b, [t] c) {
    print(a : b : c : []);
}

// Initialize a tower with n discs.
[Int] createTower (Int n) {
    [Int] l = [];
    Int i = n;
    while (i > 0) {
        l = n : l;
        i = i - 1;
    }
    return l;
}

([Int], ([Int], [Int])) hanoiI (Int discs) {
    [Int] a = createTower(discs);
    [Int] b = [];
    [Int] c = [];
    ([Int], [Int]) t = ([], []);
    if (discs % 2 == 0) {
        while (!isEmpty(a)) {
            t = legalMove(a, b);
            a = t.fst;
            b = t.snd;
            t = legalMove(a, c);
            a = t.fst;
            c = t.snd;
            t = legalMove(b, c);
            b = t.fst;
            c = t.snd;
        }
    } else {
        while (!isEmpty(a)) {
            t = legalMove(a, c);
            a = t.fst;
            c = t.snd;
            t = legalMove(a, b);
            a = t.fst;
            b = t.snd;
            t = legalMove(c, b);
            b = t.fst;
            c = t.snd;
        }
    }
    return (a, (b, c));
}

([Int], [Int]) legalMove([Int] a, [Int] b) {
    if (isEmpty(b)) {
        b = a.hd : b;
        a = a.tl;
    } else if (isEmpty(b)) {
        a = b.hd : a;
        b = b.tl;
    } else if (a.hd < b.hd) {
        b = a.hd : b;
        a = a.tl;
    } else {
        a = b.hd : a;
        b = b.tl;
    }
    return (a, b);
}

Void main () {
    Int discs = 10;
    print(hanoiR(discs) == hanoiI(discs));
}
