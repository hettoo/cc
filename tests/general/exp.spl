/*
 * Implements exponentiation by squaring
 */
Int exp(Int x, Int n) {
	if (n < 0) return exp(1 / x, -n);
	else if (n == 0) return 1;
	else if (n == 1) return x;
	else if (even(n)) return exp(x * x, n / 2);
	else if (odd(n)) return x * exp(x * x, (n - 1) / 2);
}

Bool even(Int x) {
	return x % 2 == 0;
}

Bool odd(Int x) {
	return x % 2 != 0;
}
